<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Day" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="home">@drawable/home_day</item>
        <item name="contact">@drawable/contact_day</item>
        <item name="cart">@drawable/cart_day</item>
        <item name="mine">@drawable/mine_day</item>

        <item name="titlebar_bg">@color/titlebar_bg_day</item>
        <item name="ripple_bg">@drawable/ripple_day</item>
    </style>

    <style name="Night" parent="Theme.AppCompat.NoActionBar" >
        <item name="home">@drawable/home_night</item>
        <item name="contact">@drawable/contact_night</item>
        <item name="cart">@drawable/cart_night</item>
        <item name="mine">@drawable/mine_night</item>

        <item name="titlebar_bg">@color/titlebar_bg_night</item>
        <item name="ripple_bg">@drawable/ripple_night</item>

    </style>


</resources>
